model User {
  id       Int      @id @default(autoincrement())
  username String
  email    String   @unique
  password String
  posts    Post[]
  profile  Profile?
}

model Post {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  authorId  Int
  author    User     @relation(fields: [authorId], references: [id])
}

model Profile {
  id              Int     @id @default(autoincrement())
  bio             String?
  profileImageUrl String?
  userId          Int     @unique
  user            User    @relation(fields: [userId], references: [id])
}
